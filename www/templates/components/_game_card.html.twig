<div class="game-card">
	<img src="{{asset('images/games/' ~ game.imagePath)}}" alt="{{game.title}}" class="game-image">
	<div class="game-info">
		<h2 class="game-title">{{game.title}}</h2>
		<div class="game-info-container">
			<p class="game-price">
				{% if game.price == 0 %}
					Gratuit
				{% else %}
					{{(game.price/100)|number_format(2, ',', '.')}}€
				{% endif %}
			</p>
			<a href="{{path('app_detail', {'id': game.id})}}" class="btn btn-detail">Voir détail</a>
		</div>
	</div>
</div>
