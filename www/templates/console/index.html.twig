{% extends 'base.html.twig' %}

{% block title %}Console index{% endblock %}

{% block body %}

    <div class="game-list-container">

        <h1>Liste des consoles</h1>
        <a href="{{ path('app_console_new') }}" class="add-game-btn">Ajouter une console</a>

        <table class="game-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Label</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for console in consoles %}
                <tr>
                    <td>{{ console.id }}</td>
                    <td>{{ console.label }}</td>
                    <td>
                        <div class="game-actions">
                            <a href="{{ path('app_console_show', {'id': console.id}) }}" class="view-link">Voir</a>
                            <a href="{{ path('app_console_edit', {'id': console.id}) }}" class="edit-link">Editer</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de console</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_console_new') }}" class="add-game-btn">Ajouter une consoles</a>
    </div>
    
{% endblock %}
